    <%= link_to(
          image_tag('client/algorithmica.png', :alt => 'Algorithmica'),
          'http://www.algorithmica.it',
          :target => '_blank',
          :border => 0
        ) %>
  </div>


  <div class="info">

    <div id="terms" class="info_item">
      <%= link_to "terms", "javascript:void(0);" %>
    </div>
    <div id="privacy" class="info_item">
      <%= link_to "privacy", "javascript:void(0);" %>
    </div>
    <div id="about" class="info_item">
      <%= link_to "about", "javascript:void(0);" %>
