    function() {
      $('#terms, #privacy, #about').find('a').each(
        function() {
          $(this).click(function() {
            //console.log($(this).parent().parent().attr("id") + '-content');
            showPopUp($(this).parent().attr("id") + '-content');
          });
        })
    });

</script>